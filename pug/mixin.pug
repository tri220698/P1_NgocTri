mixin category(cl,name)
    div(class= cl + "__category") Home / 
        a(href="#")= name

mixin inputText(cl,label,asterisk)
    div(class= cl + "input-text")
        label(for="")!= label + asterisk
        input(type="text")

mixin footerService(title,services)
    h4= title
    ul
        each service in services
            li(class="fas fa-chevron-right")= service

mixin channel(...icons)
    each icon in icons
        li(class= "fab fa-" + icon)

mixin iconPay(icons) 
    each icon in icons
        li(class= "fab fa-cc-" + icon)

mixin cartItem(item)
    .cart-list-product__item
        img(src= item.img, alt="product").cart-list-product__item-img
        span.cart-list-product__item-name= item.name
        span.cart-list-product__item-price= item.price
        span.cart-list-product__item-amount
            p= item.amount
        span.cart-list-product__item-total= item.total
        span.cart-list-product__item-del
            p(class="fas fa-trash-alt")

mixin billItem(cl,title,price)
    div(class= "cart-bill__information-item" + " " + cl)
        .cart-bill__information-item-title= title
        .cart-bill__information-item-price= price


mixin productItem(cl,tag,tagName,img,name,price)
    div(class= cl + "__item")
        div(class= cl + "__item-tag " + "-" +tag)= tagName
        div(class= cl + "__item-hover")
            img(src= img, alt="product")
            div
            p
                a(href="#") MUA NGAY
                a(href="#").-search.fas.fa-search
        p(class= cl + "__item-name")= name
        span(class= cl + "__item-rate")
            i(class="fas fa-star")
            i(class="fas fa-star")
            i(class="fas fa-star")
            i(class="fas fa-star")
            i(class="fas fa-star-half-alt")
        p(class= cl + "__item-price")!= price + "<del>250.000 đ</del>"

mixin listTitle(cl,title)
    div(class= cl + "__list-title")
        h4= title
        div
            span(class="fas fa-chevron-left")
            span(class="fas fa-chevron-right")

mixin galleryLeft(cl) 
    div(class= cl + "__block")
        +listTitle("gallery","Danh mục sản phẩm")
        p(class="fas fa-chevron-right")    Cây chậu treo ( 10 )
        p(class="fas fa-chevron-right").-active    Cây có hoa ( 10 )
        p(class="fas fa-chevron-right")    Cây dây leo
        p(class="fas fa-chevron-right")    Cây để bàn
        p(class="fas fa-chevron-right")    Cây may mắn
        p(class="fas fa-chevron-right")    Cây trang trí
        p(class="fas fa-chevron-right")    Cây nội thất
    div(class= cl + "__block")
        +listTitle("gallery","Tìm theo giá")
        p(class="fas fa-chevron-right")    200.000 Đ - 400.000 Đ
        p(class="fas fa-chevron-right")    400.000 Đ - 600.000 Đ
        p(class="fas fa-chevron-right")    600.000 Đ - 800.000 Đ
        p(class="fas fa-chevron-right")    800.000 Đ - 1.000.000 Đ
        p(class="fas fa-chevron-right")    1.000.000 Đ - 2.000.000 Đ
