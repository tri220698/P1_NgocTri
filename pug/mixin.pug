            span.-ro Đỏ cam
            span.-pp Tím
            span.-lb Xanh trời
            span.-yl Vàng
            span.-pink Hồng


mixin contentRightTop(cl)
    div(class= cl + "__img")
    div(class= cl + "-sort")
        div(class= cl + "-sort" + "__left")
            span(class="fas fa-th").-active
            span(class="fas fa-th-list")
        div(class= cl + "-sort" + "__right")
            span Sắp xếp theo
            div 
                input(type="checkbox", id="dropdown1")
                ul
                    li Tên sản phẩm
                    li Loại sản phẩm
                    li Giá
                    li Màu
                label(for="dropdown1") Tên sản phẩm
                    i(class="fas fa-sort-down")
            span(style="margin-left: 40px;") Show
            div(style="width: 60px;") 
                input(type="checkbox", id="dropdown2")
                ul
                    li 11
                    li 12
                    li 13
                    li 14
                    li 15
                label(for="dropdown2") 15
                    i(class="fas fa-sort-down")

mixin listData(data)
    each dt in data
        .list-content-right-list__item
            .item-left
                img(src= dt.img, alt="")
            .item-right
                p.item-right__name= dt.name
                span.item-right__rate
                    -for (var i = 0; i<5 ; i++)
                        i(class="fas fa-star")
                p.item-right__detail= dt.desc
                p.item-right__price= dt.price
                .item-right__btn-group
                    a(href="#").item-right__btn-buy MUA NGAY
                    a(href="#").item-right__btn-another.-search.fas.fa-search
                    a(href="#").item-right__btn-another.-love.fas.fa-heart

mixin pages()
    a(href="#") Trang trước
    a(href="#").-active 1
    a(href="#") 2
    a(href="#") 3
    a(href="#") 4
    a(href="#") Trang cuối

mixin bestProduct(data)
    -for (var x = 0; x < 6; x++)
        .best-product-left__item
            img(src= data[x].img, alt="")
            div
                a(href="#")= data[x].name
                span
                    -for (var i = 0; i<5 ; i++)
                        if i == 4
                            i(class="fas fa-star-half-alt")
                        else
                            i(class="fas fa-star")
                p= data[x].price